<h1 class="text-center"> Welcome to Flatiron Bake Shop</h1>

<div class="row">

<h2><% @cupcakes.each do |cupcake| %></h2>
    <div class="col-lg-4">
    <br>

    <div id="logo">

    <%= image_tag(cupcake.image, class: "img-fluid") if cupcake.image.attached? %>
    </div>
    <strong>Name:</strong>
    <%= link_to cupcake.name, cupcake_path(cupcake) %>
    <br>
    <strong>Description:</strong>
    <%= cupcake.description %>
    <br>
    <%= link_to "Learn more", cupcake_path(cupcake) %>
    <br>
    <%= link_to "Buy Now", new_cupcake_order_path %>
    <br>
    <%= link_to "Edit Cupcake", edit_cupcake_path(cupcake) %>
    </div>
<% end %>
</div>