
<h1> Please Log In </h1>

<% if flash[:alert] %>
<% flash[:alert].each do |message| %>
  <p style="color:red;"><%=message %></p>
<% end %>
<% end %>



<%= form_tag sessions_path do %>
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-1 col-form-label">Name</label>
    <div class="col-sm-3">
    <%= text_field_tag :name %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-1 col-form-label">Password</label>
    <div class="col-sm-3">
    <%= password_field_tag :password %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
    <%= submit_tag "Sign In", class:"btn btn-primary" %>
    <%# button_to "Create Account", new_user_path, method: "get", class:"btn btn-primary" %>
    </div>
  </div>
  <% end %>

  <%= button_to "Create Account", new_user_path, method: "get", class:"btn btn-primary" %>

